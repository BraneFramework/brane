import "alloc" // loads 'allocate_temp_file'
import "fs" // loads 'write-to'
import "http" version "1.0.0" // loads 'request'

// The input is a remote resource
resource := ?? as Url

// Retreive the resource with a GET request
response := request resource

// Create a new temporary file
file := allocate_temp_file

// Write the response to the file
if response.ok: write response.content to file

return file // Stop, and mark 'file' as output